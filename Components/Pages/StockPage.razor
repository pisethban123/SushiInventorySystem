@page "/stock"
@using MudBlazor
@using SushiInventorySystem.Data;
@using SushiInventorySystem.Models;
@using SushiInventorySystem.Services.Interfaces;
@inject IStockService StockService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>Stock Management</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4 px-2">
    <MudText Typo="Typo.h4" Class="mb-4">Stock Management</MudText>

    @* Add & Deduct Buttons *@
    <MudStack Row="true" Spacing="2" Class="mb-4">
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Add"
                   OnClick="HandleAddStock">
            Add Stock
        </MudButton>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Error"
                   StartIcon="@Icons.Material.Filled.Remove"
                   OnClick="HandleDeductStock">
            Deduct Stock
        </MudButton>
    </MudStack>

    @* Stock Table *@
    <MudPaper Elevation="2" Class="table-container">
        <MudTable Items="@stocks"
                  Hover="true"
                  Striped="true"
                  Bordered="true"
                  Dense="false"
                  FixedHeader="true"
                  Height="flex"
                  Class="stock-table">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Stock List</MudText>
                <MudSpacer />
                <MudText Typo="Typo.body2" Class="mr-2">Total: @stocks.Count stocks</MudText>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Item ID</MudTh>
                <MudTh>Item Name</MudTh>
                <MudTh Class="branch-column">Branch ID</MudTh>
                <MudTh Class="branch-name-column">Branch Name</MudTh>
                <MudTh>Quantity</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Item ID">@context.ItemId</MudTd>
                <MudTd DataLabel="Item Name">@(context.Item?.ItemName ?? "N/A")</MudTd>
                <MudTd DataLabel="Branch ID" Class="branch-column">@context.BranchId</MudTd>
                <MudTd DataLabel="Branch Name" Class="branch-name-column">@(context.Branch?.BranchName ?? "N/A")</MudTd>
                <MudTd DataLabel="Quantity">@context.Quantity</MudTd>
            </RowTemplate>
        </MudTable>
    </MudPaper>
</MudContainer>

<style>
    .table-container {
        overflow: hidden;
    }

    /* Ensure all cells have consistent vertical alignment */
    .stock-table .mud-table-cell {
        vertical-align: middle !important;
    }

    /* Smooth scrolling */
    .stock-table .mud-table-container {
        overflow-y: auto;
        scroll-behavior: smooth;
    }

    /* Make MudTable header sticky on scroll */
    .stock-table {
        display: block;
        max-height: 80vh;
        overflow-y: auto;
    }

    /* Ensures header sticks and remains visible */
    .stock-table .mud-table-head {
        position: sticky;
        top: 0;
        z-index: 2;
        background-color: var(--mud-palette-surface);
    }


    /* Mobile - matches NavMenu breakpoint (up to 640px) */
    @@media (max-width: 640.98px) {
        .stock-table {
            font-size: 0.875rem;
        }

        .branch-column,
        .branch-name-column {
            display: none !important;
        }

        .mud-table-cell,
        .mud-table-head-cell {
            padding: 8px 4px !important;
        }
        /* Adjust container padding on mobile to match main layout */
        .mud-container {
            padding-left: 1rem !important;
            padding-right: 1rem !important;
        }
        /* Adjust table height for mobile */
        .stock-table {
            height: calc(100vh - 280px) !important;
        }
    }

    /* Tablet (641px to 960px) - matches NavMenu desktop breakpoint */
    @@media (min-width: 641px) and (max-width: 960px) {
        .branch-column {
            display: none !important;
        }

        .stock-table {
            font-size: 0.9rem;
        }
    }

    /* Medium screens (961px to 1280px) */
    @@media (min-width: 961px) and (max-width: 1280px) {
        .stock-table {
            font-size: 0.95rem;
        }
    }

    /* Desktop - matches NavMenu desktop (min-width: 641px) */
    @@media (min-width: 641px) {
        .stock-table {
            overflow-x: auto;
        }
    }

    /* Ensure proper spacing when sidebar is visible */
    @@media (min-width: 641px) {
        .mud-container {
            max-width: 100%;
        }
    }

    /* Custom scrollbar styling */
    .stock-table .mud-table-container::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    .stock-table .mud-table-container::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .stock-table .mud-table-container::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
    }

        .stock-table .mud-table-container::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
</style>

@code {
    private List<Stock> stocks = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadStocks();
    }

    private async Task LoadStocks()
    {
        try
        {
            var result = await StockService.GetAllStocksAsync();
            stocks = result.ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading stocks: {ex.Message}", Severity.Error);
            Console.WriteLine($"Error fetching stocks: {ex.Message}");
        }
    }

